<!--ForgetPassword panel-->

<link rel="stylesheet" href="/css/sign.css">
<div class="mainContainer ">
    <div class="formInput">
        <h2> Forget Password </h2>
        <form method="POST" action="/users/forgetPasswordLink" >
            <label>Email<input type="email" name="email" placeholder=" Enter Your Email" required></label>
            <label>New Password<input type="password" name="password" placeholder="Enter New Password" required></label>
            <label>Confirm Password<input type="password" name="confirmPassword" placeholder="Confirm New Password" required></label>
            
            <div class= 'buttons'>
                <div style="margin:10px;margin-top:10px;" class = 'submitButtons'>
                    <button type="submit">Reset Password</button><br>
                    <a href="/users/sign-up">Sign Up</a>
                </div>
                
            </div>
    </div>
</div> 